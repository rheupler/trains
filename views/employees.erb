<h1>Employee Page</h1>

<% if @operators != nil %>
  <div class="column col-md-9 list-group">
    <% @operators.each do |operator| %>
      <a class="list-group-item" href="/employees/<%=operator.id%>"><%=operator.name%></a>
    <% end %>
  </div>
  <div class="column col-md-3 list-group">
    <% @operators.each do |operator| %>
      <form action="/employees/<%=operator.id%>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button class="list-group-item btn btn-danger" type="submit">X</button>
      </form>
    <% end %>
  </div>
<% end %>

<div class="row">
  <a href="/employees/new">New Employees Register Here</a>
</div>
