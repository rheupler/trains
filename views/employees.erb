<div class="row employees">
 <h1>Select Your Name</h1>
</div>

<div class="row employee-list">
<% if @operators != nil %>
  <div class="column col-md-10 list-group">
    <% @operators.each do |operator| %>
      <a class="list-group-item" href="/employees/<%=operator.id%>"><%=operator.name%></a>
    <% end %>
  </div>
  <div class="column col-md-2 list-group">
    <% @operators.each do |operator| %>
      <form action="/employees/<%=operator.id%>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button class="list-group-item btn btn-danger" type="submit">X</button>
      </form>
    <% end %>
  </div>
<% end %>
</div>

<div class="row employees">
  <a href="/employees/new">New Employees<br>Register Here</a>
</div>

<% if @cities.length < 10 %>
  <div class="row">
    <form action="/employees/add_cities" method="post" class="form-group">
      <button class = "btn btn-default" type="submit">Add Major Cities</button>
    </form>
  </div>
<% end %>
<% if @trains.length < 9 %>
  <div class="row">
    <form action="/employees/add_trains" method="post" class="form-group">
      <button type="submit">Add Major Train Lines</button>
    </form>
  </div>
<% end %>

